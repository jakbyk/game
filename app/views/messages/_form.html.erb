<%= form_with(
      id: message ? "message_#{message.id}" : nil,
      model: [chat, message],
      data: {
        controller: "chat-form",
        action: "turbo:submit-end->chat-form#clear"
      }) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :content,
                      rows: 2,
                      class: "textarea",
                      placeholder: "Napisz wiadomość...",
                      data: {
                        chat_form_target: "textarea",
                        action: "keydown->chat-form#keydown"
                      } %>
    </div>
  </div>
<% end %>