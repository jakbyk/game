<%= form_with(model: [chat, message],
              data: {
                controller: "chat-form",
                action: "turbo:submit-end->chat-form#clear"
              }) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :content,
                      rows: 2,
                      class: "textarea",
                      placeholder: "Write a message...",
                      data: {
                        chat_form_target: "textarea",
                        action: "keydown->chat-form#keydown"
                      } %>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "Send", class: "button is-link" %>
    </div>
  </div>
<% end %>