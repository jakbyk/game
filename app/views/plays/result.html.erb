<section class="section">
  <h2 class="title is-5 has-text-centered">
    Gra dobiegła końca
  </h2>
  <div class="container">
<% if @play.result == "win" %>
  <%= raw rich_text_sanitize(@play.social_satisfaction_description).gsub("\n", "<br>") %>
<% elsif @play.result == "defeat" %>
  <%= raw rich_text_sanitize(Setting.first.defeat_description).gsub("\n", "<br>") %>
<% elsif @play.result == "subjected" %>
  <%= raw rich_text_sanitize(Setting.first.subjected_description).gsub("\n", "<br>") %>
<% else %>
  <p>Gra nie została zakończona</p>
<% end %>
  </div>
</section>
