<section class="section">
  <h2 class="title is-5 has-text-centered">
    Gra dobiegła końca
  </h2>
  <div class="container">
<% if @play.result == "win" %>
  <%= raw @play.social_satisfaction_description %>
<% elsif @play.result == "defeat" %>
  <%= raw Setting.first.defeat_description %>
<% elsif @play.result == "subjected" %>
  <%= raw Setting.first.subjected_description %>
<% else %>
  <p>Gra nie została zakończona</p>
<% end %>
  </div>
</section>
