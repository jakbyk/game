<%= render 'shared/admins' do %>
  <section class="section">
    <h2 class="title is-5 has-text-centered">
      Wyniki turnieju
    </h2>
    <div class="table-container is-hidden-touch">
      <table class="table is-fullwidth is-striped is-hoverable is-narrow">
        <thead>
        <tr>
          <th>Miejsce i link do gry</th>
          <th>Wynik</th>
          <th>Gracze</th>
        </tr>
        </thead>
        <tbody>
        <% @plays.each_with_index do |play, index| %>
          <tr class="color-background-on-hover">
            <td>
              <p><b><%= index + 1 %></b></p>
              <p>
                <%= link_to admin_game_path(play) do %>
                  <%= play.name || play.id %>
                <% end %>
              </p>
            </td>
            <td>
              <p><b><%= play.decorate.name_of_result %></b></p>
              <p><b><%= play.name_of_current_month %></b></p>
              <p>Zadowolenie społeczne:</p>
              <p><b><%= play.social_satisfaction.round(2) %>%</b></p>
            </td>
            <td>
              <% play.users.each do |user| %>
                <p>
                  <%= link_to admin_user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </p>
                <p>Imię i nazwisko: <b><%= user.tournament_data&.first_name || user.first_name %> <%= user.tournament_data&.last_name || user.last_name %></b></p>
                <p>Nazwa szkoły: <b><%= user.tournament_data&.school_name %></b></p>
                <p>Adres szkoły: <b><%= user.tournament_data&.school_address %></b></p>
                <p>Dane nauczyciela szkoły: <b><%= user.tournament_data&.teacher_data %></b></p>
                <hr />
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </section>
<% end %>
