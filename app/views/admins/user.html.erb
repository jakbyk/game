<%= render 'shared/admins' do %>
  <section class="section">
    <div class="container">
      <% if current_user.is_admin && !@user.is_admin %>
        <div class="box mb-5 has-text-centered">
          <% if @user.is_tester %>
            <%= button_to remove_tester_user_path(@user),
                          method: :delete,
                          class: "button is-light is-danger" do %>
              Usuń status testera
            <% end %>
          <% else %>
            <%= button_to add_tester_user_path(@user),
                          method: :post,
                          class: "button is-light is-success" do %>
              Dodaj status testera
            <% end %>
          <% end %>
        </div>
      <% end %>
      <% if current_user.is_super_admin? %>
        <div class="box mb-5 has-text-centered">
          <% if @user.is_admin %>
            <%= button_to remove_admin_user_path(@user),
                          method: :delete,
                          class: "button is-light is-danger mt-2" do %>
              Usuń status admina
            <% end %>
          <% else %>
            <%= button_to add_admin_user_path(@user),
                          method: :post,
                          class: "button is-light is-success mt-2" do %>
              Dodaj status admina
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="box mb-5">
        <h2 class="title is-5 has-text-centered">Użytkownik <%= @user.name %></h2>
        <div class="has-text-centered mb-3"><%= render 'shared/avatar', user: @user %></div>

        <p>
          <strong>Typ:</strong> <%= if @user.is_admin
                                      "Jest administratorem"
                                    else
                                      @user.is_tester ? "Jest testerem" : "Jest graczem"
                                    end %>
        </p>
        <p><strong>Imię:</strong> <%= @user.first_name %></p>
        <p><strong>Nazwisko:</strong> <%= @user.last_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Potwierdzenie maila:</strong>
          <%= @user.confirmed? ? icon_tag("check-circle", options: { class: "is-success" }) : icon_tag("x-circle", options: { class: "is-danger" }) %>
        </p>
        <p><strong>Data rejestracji:</strong> <%= @user.created_at&.strftime("%d-%m-%Y %H:%M:%S") %></p>
        <p><strong>Ostatnio widziany:</strong> <%= @user.last_seen_at&.strftime("%d-%m-%Y %H:%M:%S") %></p>
        <p><strong>Zgoda na przetwarzanie danych:</strong>
          <%= @user.time_of_acceptance_of_information_on_the_processing_of_personal ? icon_tag("check-circle", options: { class: "is-success" }) : icon_tag("x-circle", options: { class: "is-danger" }) %>
        </p>
        <p><strong>Zgoda na regulamin:</strong>
          <%= @user.time_of_acceptance_of_the_regulations ? icon_tag("check-circle", options: { class: "is-success" }) : icon_tag("x-circle", options: { class: "is-danger" }) %>
        </p>
        <p><strong>Czy może grać w turnieju:</strong>
          <%= @user.could_join_tournament? ? icon_tag("check-circle", options: { class: "is-success" }) : icon_tag("x-circle", options: { class: "is-danger" }) %>
        </p>
        <p><strong>Czy złożył podanie do turnieju:</strong>
          <%= @user.tournament_data.present? ? icon_tag("check-circle", options: { class: "is-success" }) : icon_tag("x-circle", options: { class: "is-danger" }) %>
        </p>
        <% if @user.tournament_data.present? %>
        <p><%= link_to admin_tournament_registration_path(@user.tournament_data) do %></p>
            Pokaż zgłoszenie do turnieju
          <% end %>
        <% end %>
      </div>

      <div class="box mb-5">
        <h2 class="title is-5">Znajomi</h2>
        <% if @user.friend_users.any? %>
          <% @user.friend_users.each do |u| %>
            <p><%= link_to admin_user_path(u) do %><%= u.name %>
              <% end %></p>
          <% end %>
        <% else %>
          <p>Brak znajomych</p>
        <% end %>
      </div>

      <div class="box mb-5">
        <h2 class="title is-5">Gry aktywne</h2>
        <% if @user.plays.active.any? %>
          <div class="table-container is-hidden-touch">
            <table class="table is-fullwidth is-hoverable is-striped">
              <thead>
              <tr>
                <th>Id</th>
                <th>Gracze</th>
                <th>Obecny miesiąc</th>
                <th>Zadowolenie społeczne</th>
                <th>Rezerwa budżetowa</th>
              </tr>
              </thead>
              <tbody>
              <% @user.plays.active.each do |play| %>
                <tr class="color-background-on-hover">
                  <td>
                    <% if play.is_tournament? %>
                      <span class="tag is-success is-light">Turniejowa</span>
                    <% else %>
                      <span class="tag is-light">Rozgrzewkowa</span>
                    <% end %>
                    <br>
                    <%= play.name || play.id %>
                  </td>
                  <td>
                    <% play.users.each do |u| %>
                      <% if u == @user %>
                        <p><strong><%= u.name %></strong></p>
                      <% else %>
                        <p><%= link_to u.name, admin_user_path(u) %></p>
                      <% end %>
                    <% end %>
                  </td>
                  <td><%= play.name_of_current_month %></td>
                  <td><%= play.social_satisfaction %>%</td>
                  <td><%= play.decorate.formatted_budget_reserve %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

          <div class="is-hidden-desktop">
            <% @user.plays.active.each do |play| %>
              <div class="box color-background-on-hover mb-3">
                <p style="text-align: center">
                  <% if play.is_tournament? %>
                    <span class="tag is-success is-light">Turniejowa</span>
                  <% else %>
                    <span class="tag is-light">Rozgrzewkowa</span>
                  <% end %>
                </p>
                <p><strong>Id:</strong> <%= play.name || play.id %></p>
                <p><strong>Gracze:</strong>
                  <% play.users.each do |u| %>
                    <% if u == @user %>
                      <b><%= u.name %></b>
                    <% else %>
                      <%= link_to u.name, admin_user_path(u) %>
                    <% end %>
                    <br>
                  <% end %>
                </p>
                <p><strong>Miesiąc:</strong> <%= play.name_of_current_month %></p>
                <p><strong>Zadowolenie:</strong> <%= play.social_satisfaction %>%</p>
                <p><strong>Rezerwa:</strong> <%= play.decorate.formatted_budget_reserve %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>Brak aktywnych gier</p>
        <% end %>
      </div>

      <div class="box mb-5">
        <h2 class="title is-5">Skończone gry</h2>
        <% if @user.plays.done.any? %>
          <div class="table-container is-hidden-touch">
            <table class="table is-fullwidth is-hoverable is-striped">
              <thead>
              <tr>
                <th>Id</th>
                <th>Gracze</th>
                <th>Obecny miesiąc</th>
                <th>Zadowolenie społeczne</th>
                <th>Rezerwa budżetowa</th>
                <th>Rezultat</th>
              </tr>
              </thead>
              <tbody>
              <% @user.plays.done.each do |play| %>
                <tr class="color-background-on-hover">
                  <td>
                    <% if play.is_tournament? %>
                      <span class="tag is-success is-light">Turniejowa</span>
                    <% else %>
                      <span class="tag is-light">Rozgrzewkowa</span>
                    <% end %>
                    <br>
                    <%= play.name || play.id %>
                  </td>
                  <td>
                    <% play.users.each do |u| %>
                      <% if u == @user %>
                        <p><strong><%= u.name %></strong></p>
                      <% else %>
                        <p><%= link_to u.name, admin_user_path(u) %></p>
                      <% end %>
                    <% end %>
                  </td>
                  <td><%= play.name_of_current_month %></td>
                  <td><%= play.social_satisfaction %>%</td>
                  <td><%= play.decorate.formatted_budget_reserve %></td>
                  <td>
                    <% if play.result == "win" %>
                      <%= icon_tag("face-smile", options: { class: "is-success" }) %>
                    <% elsif play.result == "defeat" %>
                      <%= icon_tag("face-frown", options: { class: "is-danger" }) %>
                    <% end %>
                    <%= play.decorate.name_of_result %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

          <div class="is-hidden-desktop">
            <% @user.plays.done.each do |play| %>
              <div class="box color-background-on-hover mb-3">
                <p style="text-align: center">
                  <% if play.is_tournament? %>
                    <span class="tag is-success is-light">Turniejowa</span>
                  <% else %>
                    <span class="tag is-light">Rozgrzewkowa</span>
                  <% end %>
                </p>
                <p><strong>Id:</strong> <%= play.name || play.id %></p>
                <p><strong>Gracze:</strong>
                  <% play.users.each do |u| %>
                    <% if u == @user %>
                      <b><%= u.name %></b>
                    <% else %>
                      <%= link_to u.name, admin_user_path(u) %>
                    <% end %>
                    <br>
                  <% end %>
                </p>
                <p><strong>Miesiąc:</strong> <%= play.name_of_current_month %></p>
                <p><strong>Zadowolenie:</strong> <%= play.social_satisfaction %>%</p>
                <p><strong>Rezerwa:</strong> <%= play.decorate.formatted_budget_reserve %></p>
                <p><strong>Rezultat:</strong>
                  <% if play.result == "win" %>
                    <%= icon_tag("face-smile", options: { class: "is-success" }) %>
                  <% elsif play.result == "defeat" %>
                    <%= icon_tag("face-frown", options: { class: "is-danger" }) %>
                  <% end %>
                  <%= play.decorate.name_of_result %>
                </p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>Brak skończonych gier</p>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
