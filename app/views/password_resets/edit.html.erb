<div class="container">
  <h1 class="title is-3 has-text-centered">Przypisz nowe hasło</h1>
  <%= form_with model: @user, url: password_resets_path(token: params[:token]), method: :patch, class: "box container is-max-desktop" do |f| %>
    <div class="field">
      <label class="label">Nowe hasło</label>
      <div class="control">
        <%= f.password_field :password, class: "input", required: true, placeholder: "********" %>
      </div>
    </div>

    <div class="field">
      <label class="label">Potwierdź hasło</label>
      <div class="control">
        <%= f.password_field :password_confirmation, class: "input", required: true, placeholder: "********" %>
      </div>
    </div>

    <div class="field mt-4 has-text-centered">
      <div class="control">
        <%= f.submit "Aktualizuj hasło", class: "button is-success" %>
      </div>
    </div>
  <% end %>
</div>
